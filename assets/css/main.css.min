@import"https://fonts.googleapis.com/css2?family=Raleway&family=Roboto:wght@300;400;500&display=swap";@import"https://fonts.googleapis.com/css2?family=Shrikhand&display=swap";*{box-sizing:border-box}body{margin:0px;font-family:"Roboto",sans-serif}h1{font-family:"Shrikhand","sans-serif"}h1,h2,h3,h4,h5,h6,p{margin:0;padding:0}.header{display:flex;align-items:center;justify-content:center}.header__logo{padding:20px 0 15px}.location{display:flex;align-items:center;justify-content:center;gap:1rem;background-color:#eaeaea;text-align:center;padding:20px;font-size:19px}.location i{font-size:20px}.explorer{display:flex;flex-direction:column;justify-content:center;align-items:center;background-color:#f6f6f6;padding:30px 0 60px}.explorer__title{width:275px;height:68px;text-align:center}.explorer__txt{width:315px;height:46px;text-align:center;font-weight:300;font-size:18px}.explorer__button{height:50px;width:218px;border-radius:25px;margin-top:25px;color:#fff;border:none;font-size:16px}.explorer__button--backgroundcolor{background-image:linear-gradient(to bottom, #FF79DA, #9356DC)}.explorer__button--shadow{box-shadow:0px 4px 10px rgba(0,0,0,.25)}